<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.uw.dhan206.gogrocery.CreateAccountActivity">

    <EditText
        android:id="@+id/createAccountEmail"
        android:textSize="20dp"
        android:backgroundTint="@color/purple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/createAccountUsernameSubtext"
        android:text="Enter your email"
        android:layout_below="@id/createAccountEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/createAccountPasswordFieldFirst"
        android:textSize="20dp"
        android:backgroundTint="@color/purple"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:layout_below="@id/createAccountUsernameSubtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/createAccountPasswordFieldFirstSubtext"
        android:text="Enter your password"
        android:layout_below="@id/createAccountPasswordFieldFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/createAccountPasswordFieldSecond"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:backgroundTint="@color/purple"
        android:layout_below="@id/createAccountPasswordFieldFirstSubtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/createAccountPasswordFieldSecondSubtext"
        android:text="Confirm your password"
        android:layout_below="@id/createAccountPasswordFieldSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/createAccountCreateButton"
        android:layout_marginTop="30dp"
        android:padding="30dp"
        android:background="@color/purple"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:text="Create Account"
        android:layout_below="@id/createAccountPasswordFieldSecondSubtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/createAccountTermsAndUse"
        android:layout_marginTop="25dp"
        android:text="By creating an account, I agree to the Use and Terms of GoGrocery."
        android:layout_below="@id/createAccountCreateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>
